{
    "openapi":"3.0.0",
    "info":{
        "title": "API Gestão de Acessos",
        "description": "Esta API tem como objetivo facilitar o processo de gestão de acessos de sua empresa",
        "termOfService":"http://localhost:3333/terms",
        "contact":{
            "email": "luciano9675@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths":{
        "/v1/user":{
            "post":{
                "description": "Criar usuário",
                "requestBody":{
                    "description":"Dados necessarios para a criação de um novo usuário",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/RequestCreateUser"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ResponseCreateUser"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/token/first_access?token={token}":{
            "post":{
                "description":"Ativando Nova Conta de Usuário",
                "parameters":[
                    {
                    "name":"token",
                    "in":"path",
                    "description":"Token personalizado de ativação",
                    "required":"true",
                    "type":"string",
                    "format":"uuid-timestamp"
                    }
                ],
                "200":{
                    "content":{
                        "application/json":{
                            "schema":{
                            "$ref":"#/components/schemas/ResponseFirstAccess"
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/session":{
            "post":{
                "description":"Logar e autenticar usuário",
                "requestBody":{
                    "description":"Dados necessários para o login e autenticação de um usuário",
                    "content":{
                    "application/json":{
                        "schema":{
                        "$ref":"#/components/schemas/RequestAuthUser"
                        }
                    }
                    }
                },
                "responses":{
                    "200":{
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ResponseAuthUser"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/detail?user_id={user_id}":{
          "get":{
                "description":"Busca de um usuário por id",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "parameters":[
                    {
                        "name":"user_id",
                        "in":"path",
                        "description":"Id do usuário",
                        "required":"true",
                        "type":"string",
                        "format":"uuid"
                    }
                ],
                "responses":{
                    "200":{
                        "content":{
                            "application/json":{
                                "schema":{
                                "$ref":"#/components/schemas/ResponseCreateUser"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/edit?user_id={user_id}":{
            "put":{
                "description":"Editar usuário",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "parameters":[
                    {
                    "name":"user_id",
                    "in":"path",
                    "description":"Id do usuário",
                    "required":"true",
                    "type":"string",
                    "format":"uuid"
                    }
                ],
                "200":{
                    "content":{
                        "application/json":{
                            "schema":{
                            "$ref":"#/components/schemas/ResponseEditUser"
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/remove?user_id={user_id}":{
            "delete":{
                "description":"Remover usuário",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "parameters":[
                    {
                    "name":"user_id",
                    "in":"path",
                    "description":"Id do usuário",
                    "required":"true",
                    "type":"string",
                    "format":"uuid"
                    }
                ],
                "200":{
                    "content":{
                        "application/json":{
                            "schema":{
                            "$ref":"#/components/schemas/ResponseDeleteUser"
                            }
                        }
                    }
                }
            }
        }
    },
    "components":{
        "schemas":{
            "RequestCreateUser":{
                "type": "object",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "password":{
                        "type":"string"
                    }
                }
            },
            "ResponseCreateUser":{
                "type":"object",
                "id":{
                    "type":"string"
                },
                "name":{
                    "type":"string"
                },
                "email":{
                    "type":"string"
                }
            },
            "RequestFirstAccess":{
                "type": "object",
                "properties":{
                    "token":{
                        "type":"string"
                    }
                }
            },
            "ResponseFirstAccess":{
                "type":"object"
            },
            "RequestAuthUser":{
                "type":"object",
                "properties":{
                    "email":{
                        "type":"string"
                    },
                    "password":{
                        "type":"string"
                    }
                }
            },
            "ResponseAuthUser":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"string"
                    },
                    "name":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "userType":{
                        "type":"string"
                    },
                    "typeName":{
                        "type": "string"
                    },
                    "isAdm":{
                        "type":"boolean"
                    },
                    "token":{
                        "type":"string"
                    }
                }
            },
            "RequestDetailUser":{
                "type": "object",
                "properties":{
                    "id":{
                        "type":"string"
                    }
                }
            },
            "ResponseDetailUser":{
                "type":"object",
                    "id":{
                        "type":"string"
                    },
                    "name":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "userType":{
                        "type":"string"
                    },
                    "typeName":{
                        "type": "string"
                    }
            },
            "RequestEditUser":{
                "type": "object",
                "properties":{
                    "id":{
                        "type":"string"
                    }
                }
            },
            "ResponseEditUser":{
                "type":"object"
            },
            "RequestDeleteUser":{
                "type": "object",
                "properties":{
                    "id":{
                        "type":"string"
                    }
                }
            },
            "ResponseDeleteUser":{
                "type":"object"
            }

        },
        "securitySchemas":{
            "bearerAuth": {
                "description": "Autentificação utilizando JWT",
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}